---
const { url, image, alt, title, description } = Astro.props;
---

<li class="blog-card">
  <a href={url}>
    <img src={image} width={"100%"} alt={alt} />
    <div class="blog-card_content-wrapper">
      <h2 class="blog-card_title">{title}</h2>
      <p class="blog-card_description">{description}</p>
    </div>
  </a>
</li>

<style>
  a {
    text-decoration: none;
  }
  .blog-card {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    background-color: rgb(31, 31, 31);
    border-radius: 6px;
    overflow: clip;
    flex-basis: 300px;
    flex-grow: 1;
    max-width: 300px;
    transition: opacity 200ms ease;
  }

  .blog-card:hover {
    opacity: 98%;
  }
  .blog-card img {
    object-fit: cover;
    max-height: 150px;
    transition: transform 500ms ease;
  }

  .blog-card img:hover {
    transform: scale(1.2);
  }
  .blog-card_content-wrapper {
    padding: 0.5rem 1.5rem;
    border-bottom-left-radius: 6px;
    border-bottom-right-radius: 6px;
    display: flex;
    flex-direction: column;
  }
  .blog-card_title {
    text-decoration: none;
    color: #f0f0f0;
    font-size: 1.25rem;
    font-weight: 600;
    margin-top: auto;
    margin-bottom: 0px;
  }
  .blog-card_description {
    color: #f0f0f0;
    font-size: 1rem;
    margin: 0px;
  }
</style>
